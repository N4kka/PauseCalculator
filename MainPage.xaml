<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PauseCalculator.MainPage">
    <StackLayout>
        <Label Text="Seleziona la durata della pausa" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

        <Slider x:Name="slider" Minimum="0" Maximum="60" ValueChanged="Slider_ValueChanged" HorizontalOptions="FillAndExpand" />

        <Label x:Name="lblPauseTime" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />

    </StackLayout>
</ContentPage>
