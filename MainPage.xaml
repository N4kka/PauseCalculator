<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PauseCalculator.MainPage"
             BackgroundColor="#F0F4F8">

    <StackLayout Padding="20" Spacing="15">
        <!-- Aggiunta di un titolo con maggiore impatto visivo -->
        <Label Text="Seleziona la durata della pausa"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="#333333"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <!-- Personalizzazione dello Slider -->
        <Slider x:Name="slider"
                Minimum="0"
                Maximum="60"
                ThumbColor="#5061A9"
                MinimumTrackColor="#7882B9"
                MaximumTrackColor="#C6C9D8"
                ValueChanged="Slider_ValueChanged"
                HorizontalOptions="FillAndExpand"
                Margin="0, 20, 0, 0" />

        <!-- Etichetta che mostra il tempo di pausa selezionato con stile coerente -->
        <Label x:Name="lblPauseTime"
               FontSize="18"
               TextColor="#555555"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />

    </StackLayout>
</ContentPage>
